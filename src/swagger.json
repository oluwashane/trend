      "/users/{id}": {
          "get": {
              "summary": "view user profile",
              "tags": ["Users"],
              "parameters": [
                {
                    "name": "id",
                    "in":"path",
                    "description": "User ID",
                    "schema": {
                        "type": "string"
                    },
                    "required": true
                }
              ],
              "description": "Get user information",
              "responses": {
                  "200": {
                      "description": "Ok",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/Users"
                              }
                          }
                      }
                  },
                  "400": {
                      "$ref": "#/components/responses/BadRequest"
                  }
              }
          },
          "patch": {
              "summary": "update user profile",
              "tags": ["Users"],
              "parameters": [
                {
                    "name": "id",
                    "in":"path",
                    "description": "User ID",
                    "schema": {
                        "type": "string"
                    },
                    "required": true
                }
              ],
              "requestBody":{
                  "$ref": "#/components/requestBodies/userBody"
              },
              "responses": {
                  "200": {
                      "description": "Ok",
                      "content": {
                          "application/json": {
                              "schema":{
                                  "$ref": "#/components/schemas/Users"
                              }
                          }
                      }
                  },
                  "401": {
                      "$ref": "#/components/responses/Unauthorized"
                  }
              }
          },
          "delete": {
              "summary": "delete user profile",
              "parameters": [
                {
                    "name": "id",
                    "in":"path",
                    "description": "User ID",
                    "schema": {
                        "type": "string"
                    },
                    "required": true
                }
              ],
              "tags": ["Users"],
              "description": "This can only be done by the logged in user",
              "responses": {
                  "200": {
                      "description": "Ok"
                  },
                  "401": {
                      "$ref": "#/components/responses/Unauthorized"
                  }
              }
          }
      },

      "/comments/new": {
          "post": {
              "summary": "add new comment",
              "tags": ["Comments"],
              "requestBody":{
                  "$ref": "#/components/requestBodies/commentBody"
